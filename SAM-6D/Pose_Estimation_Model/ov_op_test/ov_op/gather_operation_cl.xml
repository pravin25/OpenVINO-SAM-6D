<CustomLayer name="GatherOperation" type="SimpleGPU" version="1">
    <Kernel entry="gather_kernel">
        <Source filename="gather_operation.cl"/>
        <Define name="B" type="int32" default="2"/>
        <Define name="C" type="int32" default="64"/>
        <Define name="N" type="int32" default="128"/>
        <Define name="NPOINT" type="int32" default="32"/>
        <Define name="NSAMPLE" type="int32" default="16"/>
    </Kernel>

    <Buffers>
        <Tensor arg-index="0" type="input" port-index="0"/>
        <Tensor arg-index="1" type="input" port-index="1"/>
        <Tensor arg-index="2" type="output" port-index="0" format="bfyx"/>
    </Buffers>

    <WorkSizes global="65536,1,1"/> <!-- 2 * 64 * 32 * 16 -->
</CustomLayer>

